<body class="ga-background">
  <div class="login-form">
    <h5>Log In</h5>

    <%= form_for @user, url: '/sessions', method: 'post' do |f| %>
      <label for="input_text">Email:</label>
      <%= f.text_field :email %>
      <label for="input_text">Password:</label>
      <%= f.password_field :password %>
      <%= f.submit "Submit", :class => 'waves-effect waves-red btn' %>
    <% end %>
  </div>
</body>
